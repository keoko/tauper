<.form let={f} for={@changeset} action={Routes.game_path(@conn, :join)}>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>


  <%= label f, :code %>
  <%= text_input f, :code %>
  <%= error_tag f, :code %>

  <div>
    <%= submit "Join Game" %>
  </div>
</.form>
